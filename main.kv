<SOPScreen>:
    MDBoxLayout:
        padding: dp(20)
        spacing:dp(20)
        md_bg_color:107/255, 241/255, 190/255, 1
        orientation:'vertical'
        MDBoxLayout:
            size_hint_y:.15
            orientation:'vertical'
            BackButton:
                on_release:
                    root.manager.transition.direction = "right"
                    root.manager.current = 'menu'
        MDBoxLayout:
            size_hint_y:0.7
            Image:
                source: "images/exchange.png"
                allow_stretch: True

        CoSoCard:
            padding: dp(10)
            MDBoxLayout:
                spacing:dp(10)
                orientation:'vertical'
                MDLabel:
                    text: "Chuyển SOP thành POS"
                    halign:"center"
                #MDBoxLayout:
                MDTextField:
                    id: from_text_SOP
                    hint_text: "Nhập tổng của tích"
                    helper_text_mode: "on_focus"
                    helper_text: "Ví dụ: xyz+xy'z'+xy'z+xyz'+x'y'z"
                MDLabel:
                    text: app.SOPtoPOS_result
                    halign:"center"
                MDFillRoundFlatIconButton:
                    md_bg_color: 97/255, 17/255, 150/255, 1
                    icon: "play"
                    text: "Chuyển"
                    font_style:"H6"
                    pos_hint: {'center_x': 0.5}
                    on_press: app.SOPtoPOS()


        CoSoCard:
            padding: dp(10)
            MDBoxLayout:
                spacing:dp(10)
                orientation:'vertical'
                MDLabel:
                    text: "Chuyển POS thành SOP"
                    halign:"center"
                #MDBoxLayout:
                MDTextField:
                    id: from_text_POS
                    hint_text: "Nhập tích của tổng"
                    helper_text_mode: "on_focus"
                    helper_text: "Ví dụ: (x+y+z).(x+y'+z).(x+y'+z')"
                MDLabel:
                    text: app.POStoSOP_result
                    halign:"center"
                MDFillRoundFlatIconButton:
                    md_bg_color: 97/255, 17/255, 150/255, 1
                    icon: "play"
                    text: "Chuyển"
                    font_style:"H6"
                    pos_hint: {'center_x': 0.5}
                    on_press: app.POStoSOP()

